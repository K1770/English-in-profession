            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem3" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_voltage_and_resistance"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem4" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_extent_to_which"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem5" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/positive_and_negative_polarity"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem6" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/electricity_flows_from"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem7" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/short_circuits_and_fuses"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem8" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/if_the_wrong_sized_wire"
