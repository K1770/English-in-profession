            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem11" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/series_and_parallel_circuits"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem12" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_circuit_usually_includes_more"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem13" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem15"
            android:layout_width="match_parent"
