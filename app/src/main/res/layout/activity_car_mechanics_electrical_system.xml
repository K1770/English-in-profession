            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCarMechanicsElectricalSystem10" />

        <TextView
            android:id="@+id/textViewCarMechanicsElectricalSystem12"
            android:layout_width="match_parent"
